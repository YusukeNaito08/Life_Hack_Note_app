    <div class="row">
      <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
        <div class="card card-signup my-5">
          <div class="card-body">
            <h5 class="card-title text-center">Sign In</h5>
            <%= form_with model: @user, url: user_session_path, local: true do |f|  %>
            <div class="form-label-group">
              <label for="inputname">名前</label>
                <%= f.text_field :name, autocomplete: "name", id:"inputname",class:"form-control" %>
              </div>
              <div class="form-label-group">
                <label for="inputPassword">パスワード</label>
                <%= f.password_field :password, autocomplete: "current-password", id:"inputpassword", class:"form-control" %>
              </div>
              <% if devise_mapping.rememberable? %>
              <div class="form-check mb-3">
                <%= f.check_box :remember_me, class:"form-check-input" %>
                <label class="form-check-label">Remember password</label>
              </div>
              <% end %>
              <%= f.submit "Sign In", class: "btn btn-lg btn-primary btn-block text-uppercase"%>
              <hr class="my-4">
                <%= link_to "ゲストユーザー（観覧用)",users_guest_sign_in_path, method: :post,
                  class: "btn btn-lg btn-outline-warning btn-block text-uppercase" %>
                <%= link_to "アカウントを作成", new_user_registration_path, class: "btn btn-lg btn-outline-success btn-block text-uppercase" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
