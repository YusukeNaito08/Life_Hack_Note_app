  <div class="container">
    <div class="row">
      <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
        <%= devise_error_messages %>
        <div class="card card-signin my-5">
          <div class="card-body">
            <h5 class="card-title text-center">Sign Up</h5>
              <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
              <div class="form-label-group">
                <label for="inputName">名前</label>
                <%= f.text_field :name, autocomplete: "name", id:"inputName",class:"form-control" %>
              </div>
              <div class="form-label-group">
                <label for="inputEmail">メールアドレス</label>
                <%= f.email_field :email,  autocomplete: "name", id:"inpuEmail",class:"form-control" %>
              </div>
              <div class="form-label-group">
                <label for="inputPassword">パスワード</label>
                <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> 文字以内)</em>
                <% end %><br />
                <%= f.password_field :password, autocomplete: "new-password", id:"inputPassword", class:"form-control" %>
              </div>
              <div class="form-label-group mb-3">
                <label for="confirmtPassword">確認パスワード</label>
                <%= f.password_field :password_confirmation, autocomplete: "new-password", id:"confirmPassword", class:"form-control" %>
              </div>
                <%= f.submit "Sign Up", class: "btn btn-lg btn-success btn-block text-uppercase"%>
                <hr class="my-4">
              <% end %>
          </div>
        </div>
      </div














