    <div class= "col-md-4 mb-5">
      <div class= "card profile">
        <div class= "card-body">
          <div class= "align-items-center text-center">
            <%= link_to user_path(@user) do %>
            <%= attachment_image_tag @user, :image, :fill, 120, 120, format: 'jpeg', fallback: "no_image.jpg", size:'120x120', class:"rounded-circle" %>
            <% end %>
            <div class= "mt-3">
              <h4 class="user-name mb-5"><%= @user.name %></h4>
              <% if @user == current_user %>
               <%= link_to  edit_user_path(@user) do %>
               <i class="fas fa-cogs edit"></i>
               <% end %>
              <% end %>
            </div>
          </div>
        </div>
      <div class="card user-card">
        <ul class="list-group list-group-flush mt-5 ">
          <li class="list-group-item d-flex justify-content-between align-items-right">Post <span><%= @user.posts.count %></span></li>
          <li class="list-group-item d-flex justify-content-between align-items-center">Bookmark <%= link_to bookmarks_user_path(@user), class:"link_to" do %>
            <%= @user.bookmark_posts.count %>
          <% end %></li>
        </ul>
      </div>
      </div>
    </div>
