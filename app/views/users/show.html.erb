<div class= "container">
  <div class= "row mt-5">

  <%= render 'users/profile', user: @user %>


  <div class= "col-md-8 mb-4">
  <% @posts.each do |post| %>
      <div class= "card post">
        <div class= "card-header bg-transparent border-bottom-0 "> <%= attachment_image_tag post.user,
          :image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg", size:'50x50', class:"float-left rounded-circle" %>
        <div class="float-right fas fa-bookmark">
          <%= post.bookmarks_count %>
        </div>
        </div>
        <div class= "card-body">
          <blockquote class= "blockquote"><%=link_to post.title, post_path(post.id), class: "card-title" %></blockquote>
          <figcaption>
          <small class="text-muted"><%= post.created_at %></small>
          </figcaption>
            <div class= footer>
            <% post.tags.each do |tag| %>
              <small class="fas fa-tag">
              <%=tag.tag_name %>
              </small>
            <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <div class="paginate">
      <%= paginate(@posts) %>
    </div>
  
    <span id="back">
      <a href="#">
        <i class="fas fa-arrow-circle-up"></i>
      </a>
    </span>
  </div>
</div>