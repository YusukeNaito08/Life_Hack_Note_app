<div class= "container">
  <div class= "row">
    <div class= "col-md-4 mb-3">
      <div class= "card">
        <div class= "card-body">
          <div class= "d-flex flex-column align-items-center text-center">
            <%= attachment_image_tag @user, :image, :fill, 120, 120, format: 'jpeg', fallback: "no_image.jpg", class:"rounded-circle" %>
            <div class= "mt-3">
              <h4><%= @user.name %></h4>
              <p>投稿数</p>
              <p>タグ</p>
              <p>カテゴリー</p>
              <p><%= link_to "Edit", edit_user_path(@user) %></p>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class= "col-md-8 mb-3">
    <%= form_with model: @post, local:true do|f| %>
      <div class= "row mb-3">
        <label for= "inputTitle", class= "col-sm-2 col-form-label">Title</label>
        <div class=  "col-sm-10">
          <%= f.text_field :title, id:"inputTitle", class:"form-control" %>
        </div>
      </div>
      <div class= "row mb-3">
        <label for= "inpuContent", class= "col-sm-2 col-form-label">Content</label>
        <div class=  "col-sm-10">
          <%= f.text_area :content, id:"inputContent",class:"form-control" %>
        </div>
      </div>
      <div class= "row mb-3">
        <label for= "inputImage", class= "col-sm-2 col-form-label">Image</label>
        <div class= "col-sm-10">
           <%= f.attachment_field :post_images_files, multiple: true, id:"inputImage" %>
        </div>
      </div>
      <div class= "row mb-3">
        <label for= "", class= "col-sm-2 col-form-label">Tag</label>
        <div class= "col-sm-10">

        </div>
      </div>
    <% end %>
    </div>
  </div>
</div>