<header>
  <nav class= "navbar navbar-expand-lg navbar-light">
    <div class= "container  header ">
      <% if user_signed_in? %>
      <span class= "navbar-brand  h1">
        <%= link_to "Life Hack Note", posts_path, class:"header-logo" %>
      </span>
      <% else %>
      <span class= "navbar-brand  h1">
        <%= link_to "Life Hack Note", root_path, class:"header-logo" %>
      </span>
      <% end %>
      <ul class= "navbar-nav">
      <% if user_signed_in? %>
        <li class= "nav-item dropdown">
          <a class= "nav-link  dropdown-toggle" data-toggle= "dropdown" aria-expanded= "false" id:"navbarDropdown" role= "button">
            <%= attachment_image_tag current_user,
            :image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg", size: "50x50", class:"float-left rounded-circle"%>
          </a>
            <ul class= "dropdown-menu",  aria-labelledby= "navbarDropdown">
              <% if current_user.try(:admin?) %>
              <li>
                <%= link_to "管理者画面",  rails_admin_path, class:"dropdown-item" %>
              </li>
            <% end %>
              <li>
                <%= link_to "マイページ", user_path(current_user), class:"dropdown-item" %>
              </li>
              <li>
                <%= link_to "新規投稿", new_post_path, class:"dropdown-item", data: {"turbolinks" => false} %>
              </li>
              <li><hr class= "dropdown-divider"></li>
              <li>
                <%= link_to "Logout", destroy_user_session_path, method: :delete, class:"dropdown-item"  %>
              </li>
            </ul>
        </li>
        <% else %>
          <li>
            <%= link_to "Sign Up", new_user_registration_path, class:"list-item nav" %>
          </li>
          <li>
            <%= link_to "Sign In", user_session_path, class:"list-item nav" %>
          </li>
        </ul>
        <% end %>
    </div>
  </nav>
</header>