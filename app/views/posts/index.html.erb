<div class= "container-fluid">
  <div class="row">
    <%= search_form_for @q do |f| %>
    <%= f.search_field :title_or_content_cont, placeholder: "Title or Contents"  %>
    <%= f.search_field :tags_tag_name_cont, placeholder: "tags"  %>
    <%= f.submit %>
    <% end %>
    <p>フォロータグ /</p>
    <p>新着</p>
    <p><%=link_to "いいね", bookmarks_index_path %></p>
  </div>


  <div class= "row">
    <div class= "col-md-3">

    </div>
    <div class= "col-md-6">
    <% @posts.each do |post| %>
      <div class= "card">
        <div class= "card-header bg-transparent"> <%= attachment_image_tag post.user,
          :image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg", class:"float-left rounded-circle"  %>
          <div class="float-right fas fa-bookmark">
            <%= post.bookmarks_count %>
          </div>
        </div>
        <figure class= "card-body mb-0">
          <blockquote class= "blockquote"><%=link_to post.title, post_path(post.id) %></blockquote>
          <figcaption class= "blockquote-footer fas fa-tags mb-0">
            <% post.tags.each do |tag| %>
              <%= tag.tag_name %>
            <% end %>
            <div class="fas fa-eye ml-auto">
              <%= post.impressions_count %>
            </div>
          </figcaption>
          
        </figure>
      </div>
    <% end %>
    </div>
    <div class= "col-md-3">
    
  </div>






 </div>
</div>