<div class= "container">
  <div class= "row">
    <div class= "col-md-3 mb-3">
      <div class= "card">
        <div class= "card-body">
          <div class= "d-flex flex-column align-items-center text-center">
            <%= attachment_image_tag @post.user, :image, :fill, 120, 120, format: 'jpeg', fallback: "no_image.jpg", class:"rounded-circle" %>
            <div class= "mt-3">
              <h4><%= @post.user.name %></h4>
              <p>投稿数</p>
             
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class= "col md-8">
      <div class= "card">
        <div class= "card-header">
        <%= attachment_image_tag @post.user, :image, :fill, 30, 30, format: 'jpeg', fallback: "no_image.jpg", class:"float-left rounded-circle"  %>
        <%= @post.user.name %>
        </div>
        <div class= "card-body">
          <p class= "card-title"><%= @post.title %></p>
          <p><small class="text-muted"><%= @post.created_at %></small></p>
          <p class= "card-text"><%= @post.content %></p>
          <% @post_images_files.each do |file| %>
              <%= attachment_image_tag file, :file,  class:"card-img" %>
            <% end %>
          <% @tags.each do |tag| %>
          <p class= "card-text d-inline"><%=tag.tag_name %></p>
           <%end%>  
        </div>
        <div class= "card-footer">
          <div class="float-right">
            <p>いいね数</p>
          </div>
          <div class="float-left">
            <p>view</p>
          </div>
        </div>
      </div>
      <div class= "row">
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
				  <div class="text-right">
				    <%= link_to "Back", user_path(current_user), class:"btn btn-secondary" %>
				    <%= link_to "Destroy", post_path(@post), method: :delete, class:"btn btn-danger", data: {confirm: "削除しますか？"}  %>
				    <%= link_to "Edit", edit_post_path(@post), class:"btn btn-success" %>
			    </div>
			  </div>
      </div>
    </div>
  </div>
</div>

