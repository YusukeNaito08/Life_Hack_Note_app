<% if user_signed_in? %>
    <% if post.bookmarked_by?(current_user)%>
      <i class='fas fa-bookmark'></i><%=link_to post.bookmarks.count, post_bookmarks_path(post.id),method: :delete, remote: true %>
    <% else %>
      <i class='fa fa-bookmark'></i><%=link_to post.bookmarks.count, post_bookmarks_path(post.id), method: :post, remote: true %>
    <% end %>
<% else %>
    <%= post.bookmarks.count %>
<% end %>
    